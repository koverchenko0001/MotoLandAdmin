<Page x:Class="MotoLandAdmin.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoLandAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Border>
            <TextBlock x:Name="largeWindow"
                           Text="MotoLand Admin"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"/>

        </Border>
        
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Bejelentkezés" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Felhasználónév:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox x:Name="usernameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" MinWidth="100" Height="25"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Jelszó:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <PasswordBox x:Name="passwordBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" MinWidth="100" Height="25"/>

                <StackPanel Grid.Row="2" Grid.Column="1">

                    <Button x:Name="loginButton" 
                            Grid.Row="2" 
                            HorizontalAlignment="Right" 
                            Content="Bejelentkezés" 
                            MinWidth="100" 
                            Height="30"/>
                </StackPanel> 


            </Grid>
        </Grid>
    </Grid>
</Page>
