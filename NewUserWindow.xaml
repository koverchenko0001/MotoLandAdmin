<Window x:Class="MotoLandAdmin.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotoLandAdmin"
        mc:Ignorable="d"
        Title="Új felhasználó" Height="450" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" KeyUp="Window_KeyUp" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock
                Text="Regisztráció"
                VerticalAlignment="Center"
                Margin="10"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <TextBlock
                        Text="Felhasználónév:"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0"/>

                </Grid>
                <Grid Grid.Column="1">
                    <TextBox
                        Name="userNameTB"
                        Width="150"
                        Height="20"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="5,0,0,0"/>
                </Grid>
                
            </Grid>
            
            
        </Grid>

        
    </Grid>
</Window>
