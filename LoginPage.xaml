<Page x:Class="MotoLandAdmin.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoLandAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="LoginPage">

    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                FontSize="20" 
                FontWeight="Bold"
                Foreground="#FF222D22" 
                Height="23" 
                Text="MotoLand"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <TextBlock 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="14" 
                FontWeight="Bold"
                Foreground="#FF222D22" 
                Height="20" 
                Text="adminisztrációs felület"/>
        </Grid>
        
        <Grid Grid.Row="2">
            <TextBlock 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="14" 
                FontWeight="Bold"
                Foreground="#FF222D22" 
                Height="20" 
                Text="BEJELENTKEZÉS"/>
        </Grid>

        <Grid Grid.Row="3">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            FontSize="12" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Text="E-mail cím:" 
                            Margin="0,0,2,0"/>    
                </Grid>
                <Grid Grid.Column="1">
                    <TextBox 
                            x:Name="userNameTB"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="10" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Width="150" 
                            Margin="2,0,0,0"/>
                </Grid>

            </Grid>
            
        </Grid>

        <Grid Grid.Row="4">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            FontSize="12" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Text="Jelszó:" 
                            Margin="0,0,2,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <PasswordBox
                            x:Name="userPasswordPB"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="10" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Width="150" 
                            Margin="2,0,0,0"/>
                </Grid>

            </Grid>

        </Grid>


        <Grid Grid.Row="5">
            <Button 
                x:Name="loginBtn"
                Content="Bejelentkezés"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="12" 
                FontWeight="Normal"
                Foreground="White" 
                Background="#FF222D22" 
                Height="25" 
                Width="100"
                Margin="0,0,5,0"
                Click="loginButton_Click" Cursor="Hand"/>

        </Grid>




    </Grid>
</Page>
