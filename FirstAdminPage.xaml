<Page x:Class="MotoLandAdmin.FirstAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoLandAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="FirstAdminPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                FontSize="20" 
                FontWeight="Bold"
                Foreground="#FF222D22" 
                Height="23" 
                Text="MotoLand"/>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="14" 
                FontWeight="Bold"
                Foreground="#FF222D22" 
                Height="20" 
                Text="adminisztrációs felület"/>
        </Grid>

        <Grid Grid.Row="2">
            
            <TextBlock 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="14" 
                FontWeight="Bold"
                Foreground="#FF222D22" 
                Height="20" 
                TextWrapping="Wrap" 
                Text="Root/Admin regisztráció"/>
        </Grid>

        <Grid Grid.Row="3">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            FontSize="12" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Text="Felhasználónév:" 
                            Margin="0,0,2,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <TextBox 
                            x:Name="adminNickNameTB"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="10" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Width="150" 
                            Margin="2,0,0,0" />
                </Grid>

            </Grid>

        </Grid>


        <Grid Grid.Row="4">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            FontSize="12" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Text="E-mail cím:" 
                            Margin="0,0,2,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <TextBox 
                            x:Name="adminMailTB"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="10" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Width="150" 
                            Margin="2,0,0,0" />
                </Grid>

            </Grid>

        </Grid>





        <Grid Grid.Row="5">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            FontSize="12" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Text="Jelszó:" 
                            Margin="0,0,2,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <PasswordBox
                            x:Name="adminPasswordPB"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="10" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Width="150" 
                            Margin="2,0,0,0" />
                </Grid>

            </Grid>

        </Grid>



        <Grid Grid.Row="6">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            FontSize="12" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Text="Ellenőrzés:" 
                            Margin="0,0,2,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <PasswordBox
                            x:Name="adminCPasswordPB"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="10" 
                            FontWeight="Normal"
                            Foreground="Gray" 
                            Height="20" 
                            Width="150" 
                            Margin="2,0,0,0" />
                </Grid>

            </Grid>

        </Grid>


        <Grid Grid.Row="7">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        FontSize="12" 
                        FontWeight="Normal"
                        Foreground="Gray" 
                        Height="20" 
                        Text="Jogosultság:" 
                        Margin="0,0,2,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <ComboBox 
                        FontWeight="Normal"
                        FontSize="10" 
                        Margin="2,0,0,0" 
                        Foreground="Gray" 
                        Height="20" 
                        Width="150" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        x:Name="adminTypeCB" IsReadOnly="True">
                        <ComboBoxItem Content="admin"/>
                        <ComboBoxItem Content="root"/>
                    </ComboBox>
                </Grid>

            </Grid>

        </Grid>



        <Grid Grid.Row="8">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        FontSize="12" 
                        FontWeight="Normal"
                        Foreground="Gray" 
                        Height="20" 
                        Text="Státusz:" 
                        Margin="0,0,2,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <ComboBox 
                        FontWeight="Normal"
                        FontSize="10" 
                        Margin="2,0,0,0" 
                        Foreground="Gray" 
                        Height="20" 
                        Width="150" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        x:Name="adminFlagCB" IsReadOnly="True">
                        <ComboBoxItem Content="új"/>
                        <ComboBoxItem Content="aktiív" IsEnabled="False"/>
                    </ComboBox>
                </Grid>

            </Grid>

        </Grid>












        <Grid Grid.Row="9">
            <Button 
                x:Name="adminRegistrationBtn"
                Content="Regisztráció"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="12" 
                FontWeight="Normal"
                Foreground="White" 
                Background="#FF222D22" 
                Height="25" 
                Width="100"
                Cursor="Hand" 
                Click="adminRegistrationBtn_Click"/>

        </Grid>


        <Grid Grid.Row="10">

            <Button 
                x:Name="adminCancelBtn"
                Content="Mégsem"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="12" 
                FontWeight="Normal"
                Foreground="White" 
                Background="#FF222D22" 
                Height="25" 
                Width="100"
                Cursor="Hand" 
                Click="adminCancelBtn_Click"/>

        </Grid>



    </Grid>
</Page>
