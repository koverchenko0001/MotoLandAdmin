<Page x:Class="MotoLandAdmin.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoLandAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Menu>
            
            <MenuItem Header="Fájl">
                <MenuItem Header="Új" Name="NewMenu" Click="NewMenu_Click"/>
                <MenuItem Header="Megnyitás" />
                <Separator />
                <MenuItem Header="Kilépés" Name="ExitMenu" Click="ExitMenu_Click"/>
            </MenuItem>

            <MenuItem Header="Szerkesztés">
                <MenuItem Header="Visszavonás" />
                <MenuItem Header="Ismétlés" />
                <Separator />
                <MenuItem Header="Kivágás" />
                <MenuItem Header="Másolás" />
                <MenuItem Header="Beillesztés" Click="MenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Nézet">
                <MenuItem Header="Nagyítás" />
                <MenuItem Header="Kicsinyítés" />
                <Separator />
                <MenuItem Header="Teljes képernyő" />
            </MenuItem>
            <MenuItem Header="Súgó">
                <MenuItem Header="Tartalom" />
                <MenuItem Header="Frissítések keresése" />
                <Separator />
                <MenuItem Header="Névjegy" />
            </MenuItem>
        </Menu>
    </Grid>
</Page>
